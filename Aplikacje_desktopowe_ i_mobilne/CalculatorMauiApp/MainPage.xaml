<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CalculatorMauiApp.MainPage"
             xmlns:vm="clr-namespace:CalculatorMauiApp.ViewModels"
             Title="Kalkulator">
    <ContentPage.BindingContext>
        <vm:CalculatorViewModel/>
    </ContentPage.BindingContext>

    <Grid ColumnDefinitions="*, *, *, *, *"
          RowDefinitions="auto,*,*,*,*">
        <Label Grid.ColumnSpan="5"
               Background="Bisque"
               Text="{Binding CalculationResult}"
               FontSize="70"
               VerticalTextAlignment="Center"/>
        <Button Text="7"
                Grid.Row="1"
                Grid.Column="0"
                Margin="5"
                Command="{Binding NumericCommand}"
                CommandParameter="{Binding Text,Source={RelativeSource Self}}"/>
        <Button Text="8"
                Grid.Row="1"
                Grid.Column="1"
                Margin="5"
                Command="{Binding NumericCommand}"
                CommandParameter="{Binding Text,Source={RelativeSource Self}}"/>
        <Button Text="9"
                Grid.Row="1"
                Grid.Column="2"
                Margin="5"
                Command="{Binding NumericCommand}"
                CommandParameter="{Binding Text,Source={RelativeSource Self}}"/>
        <Button Text="4"
                Grid.Row="2"
                Grid.Column="0"
                Margin="5"
                Command="{Binding NumericCommand}"
                CommandParameter="{Binding Text,Source={RelativeSource Self}}"/>
        <Button Text="5"
                Grid.Row="2"
                Grid.Column="1"
                Margin="5"
                Command="{Binding NumericCommand}"
                CommandParameter="{Binding Text,Source={RelativeSource Self}}"/>
        <Button Text="6"
                Grid.Row="2"
                Grid.Column="2"
                Margin="5"
                Command="{Binding NumericCommand}"
                CommandParameter="{Binding Text,Source={RelativeSource Self}}"/>
        <Button Text="1"
                Grid.Row="3"
                Grid.Column="0"
                Margin="5"
                Command="{Binding NumericCommand}"
                CommandParameter="{Binding Text,Source={RelativeSource Self}}"/>
        <Button Text="2"
                Grid.Row="3"
                Grid.Column="1"
                Margin="5"
                Command="{Binding NumericCommand}"
                CommandParameter="{Binding Text,Source={RelativeSource Self}}"/>
        <Button Text="3"
                Grid.Row="3"
                Grid.Column="2"
                Margin="5"
                Command="{Binding NumericCommand}"
                CommandParameter="{Binding Text,Source={RelativeSource Self}}"/>
        <Button Text="0"
                Grid.Row="4"
                Grid.Column="0"
                Grid.ColumnSpan="3"
                Margin="5"
                Command="{Binding NumericCommand}"
                CommandParameter="{Binding Text,Source={RelativeSource Self}}"/>

        <Button Text="+"
                Grid.Row="1"
                Grid.Column="3"
                Margin="5"
                Command="{Binding OperationCommand}"
                CommandParameter="{Binding Text,Source={RelativeSource Self}}"/>
        <Button Text="-"
                Grid.Row="2"
                Grid.Column="3"
                Margin="5"
                Command="{Binding OperationCommand}"
                CommandParameter="{Binding Text,Source={RelativeSource Self}}"/>
        <Button Text="*"
                Grid.Row="3"
                Grid.Column="3"
                Margin="5"
                Command="{Binding OperationCommand}"
                CommandParameter="{Binding Text,Source={RelativeSource Self}}"/>
        <Button Text="/"
                Grid.Row="4"
                Grid.Column="3"
                Margin="5"
                Command="{Binding OperationCommand}"
                CommandParameter="{Binding Text,Source={RelativeSource Self}}"/>

        <Button Text="="
                Grid.Row="1"
                Grid.Column="4"
                Grid.RowSpan="4"
                Margin="5"
                Command="{Binding OperationEquilCommand}"
                CommandParameter="{Binding Text,Source={RelativeSource Self}}"/>
    </Grid>

</ContentPage>
